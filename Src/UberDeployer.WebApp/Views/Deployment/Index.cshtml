@model UberDeployer.WebApp.Core.Models.Deployment.IndexViewModel
@{
  ViewBag.Title = "Deployment | ÜberDeployer";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
  <h1>
    Deployment
  </h1>
  
  <hr />

  <p>
    Life pro tip of the fucking day: <em>@Model.TipOfTheDay</em>
    <br />
    <small>Courtesy of <a href="http://fuckinghomepage.com/">Fucking Homepage</a>.</small>
  </p>

  <hr />

  <div class="clearfix">
    <div id="lst-projects-container" class="lst-container">
      <label for="lst-projects" class="lst-header">Projects:</label>
      <br />
      <select id="lst-projects" size="10">
      </select>
    </div>

    <div id="lst-project-configs-container" class="lst-container">
      <label for="lst-project-configs" class="lst-header">Configurations:</label>
      <br />
      <select id="lst-project-configs" size="10">
      </select>
    </div>

    <div id="lst-project-config-builds-container" class="lst-container">
      <label for="lst-project-config-builds" class="lst-header">Builds:</label>
      <br />
      <select id="lst-project-config-builds" size="10">
      </select>
      </div>
  </div>  

  <hr />

  <div id="bottom-bar" class="clearfix">
    <label for="lst-environments">Target environment:</label>
    <select id="lst-environments">
    </select>
    <input id="btn-deploy" type="submit" name="btn-deploy" value="Deploy" class="btn btn-primary"></input>
  </div>
  
  <hr />

  <div id="txt-logs-container">
    <div id="txt-logs"></div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    initializeDeploymentPage();
  })
</script>
